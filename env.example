# PostgreSQL SQL Analyzer - Пример конфигурации
# Скопируйте этот файл в .env и заполните своими значениями

# Настройки базы данных
DB_HOST=localhost
DB_PORT=5435
DB_NAME=postgres
DB_USER=readonly_user
DB_PASSWORD=your_password_here

# LLM настройки
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet

LOCAL_LLM_URL=http://localhost:11434
LOCAL_LLM_MODEL=llama2

# Настройки AI-рекомендаций
ENABLE_AI_RECOMMENDATIONS=false
AI_PROVIDER=auto
AI_CONFIDENCE_THRESHOLD=0.7

# Настройки прокси для OpenAI
ENABLE_PROXY=false
PROXY_HOST=localhost
PROXY_PORT=1080

# SSH настройки для туннелирования
SSH_HOST=your_ssh_host_here
SSH_PORT=22
SSH_USER=your_ssh_user_here
SSH_KEY_PATH=~/.ssh/id_rsa
AUTO_CREATE_SSH_TUNNEL=false
SSH_TIMEOUT=30
CHECK_DB_CONNECTION_ON_START=true

# Дополнительные пользователи для отладки
DB_SUPER_USER=postgres
DB_SUPER_PASSWORD=your_super_password_here
DB_ADMIN_USER=admin_user
DB_ADMIN_PASSWORD=your_admin_password_here

# Brave API
BRAVE_API_KEY=your_brave_api_key_here
